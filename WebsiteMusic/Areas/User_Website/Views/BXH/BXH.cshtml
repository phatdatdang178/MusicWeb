@{
    ViewBag.Title = "BXH";
    Layout = "~/Areas/User_Website/Views/Shared/_LayoutUser.cshtml";
}

<div class="bxh-container mt-5">
    <h1 class="title mb-2 mt-5 pt-3" style="font-weight: 600;">
        BXH NHẠC MỚI
        <i class="fa-solid fa-circle-play"></i>
    </h1>
    <table class="bxh-table table">
        <tbody>
            @if (ViewBag.TopMusicByListen != null)
            {
                var index = 1;
                foreach (var music in ViewBag.TopMusicByListen)
                {
                    <tr>
                        <th class="bxh-stt@(index <= 3 ? index.ToString() : "")" scope="row">
                            <p>@index</p>
                        </th>
                        <td class="bxh-song">
                            <img class="card-img-left" src="@Url.Content("~/Images/Images_Music/" + music.MusicImageFileName)" data-id="@music.MusicId" data-title="@music.MusicName" data-singer="@music.MusicSinger" alt="@music.MusicName" />
                            <p class="m-2 mt-0 music-title" data-id="@music.MusicId" data-title="@music.MusicName" data-singer="@music.MusicSinger">@music.MusicName</p>
                        </td>
                        <td><p class="m-2 mt-0">@music.MusicSinger</p></td>
                        <td class="bxh-time">
                            <i class="fa-regular fa-heart" id="favoriteIcon" onclick="toggleFavorite(this)">
                        </td>
                    </tr>
                    index++;
                }
            }
        </tbody>
    </table>
</div>
